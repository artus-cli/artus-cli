{
  "name": "@artus-cli/artus-cli",
  "version": "1.0.0",
  "description": "common-bin base on artus",
  "keywords": [
    "artus",
    "command-line-app",
    "cli",
    "commander"
  ],
  "author": "TZ <atian25@qq.com>",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "type": "module",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/esm/index.d.ts"
    }
  },
  "scripts": {
    "lint": "eslint .",
    "test": "mocha",
    "test-release": "RELEASE=true mocha",
    "cov": "c8 -n src/ npm test",
    "ci": "npm run lint && npm run cov",
    "tsc:cjs": "tsc --module commonjs --target es2017 --outDir dist/cjs",
    "tsc:esm": "tsc",
    "tsc": "rm -rf dist && npm run tsc:esm && npm run tsc:cjs",
    "prepublishOnly": "npm run tsc && npm run test-release"
  },
  "dependencies": {
    "@artus/core": "1.0.0",
    "@artus/injection": "^0.5.1",
    "@artus/pipeline": "^0.2.2",
    "debug": "^4.3.4",
    "koa-compose": "^4.1.0",
    "reflect-metadata": "^0.1.13",
    "type-fest": "^3.3.0",
    "yargs-parser": "^21.1.1"
  },
  "devDependencies": {
    "@artus/tsconfig": "1",
    "@types/inquirer": "^9.0.3",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.7.14",
    "@types/yargs-parser": "^21.0.0",
    "c8": "^7.12.0",
    "coffee": "^5.5.0",
    "command-line-usage": "^6.1.3",
    "dirname-filename-esm": "^1.1.1",
    "eslint": "^8.28.0",
    "eslint-config-egg": "^12.1.0",
    "inquirer": "^8.0.0",
    "mocha": "^10.0.0",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "tslib": "^2.4.0",
    "typescript": "^4.8.2"
  },
  "homepage": "https://github.com/artus-cli/artus-cli",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artus-cli/artus-cli.git"
  },
  "license": "MIT"
}
